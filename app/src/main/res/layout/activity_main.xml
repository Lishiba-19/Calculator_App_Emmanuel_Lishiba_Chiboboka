<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_view_Wid"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:paddingRight="@dimen/calcbuttonsize"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/text_view_Rid"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:paddingRight="@dimen/calcbuttonsize"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/clear_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/red"
                android:onClick="clearClick"
                android:text="c"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />


            <Button
                android:id="@+id/divide_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="divideClick"
                android:text="/"
                android:textColor="@color/orange"
                android:textSize="@dimen/calcbuttonsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/seven_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="sevenClick"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

            <Button
                android:id="@+id/eight_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="eightClick"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

            <Button
                android:id="@+id/nine_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="nineClick"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

            <Button
                android:id="@+id/times_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="multiplyClick"
                android:text="*"
                android:textColor="@color/orange"
                android:textSize="@dimen/calcbuttonsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/four_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="fourClick"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

            <Button
                android:id="@+id/five_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="fiveClick"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

            <Button
                android:id="@+id/six_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="sixClick"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

            <Button
                android:id="@+id/plus_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="plusClick"
                android:text="+"
                android:textColor="@color/orange"
                android:textSize="@dimen/calcbuttonsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/one_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="oneClick"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

            <Button
                android:id="@+id/two_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="twoClick"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

            <Button
                android:id="@+id/three_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="threeClick"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

            <Button
                android:id="@+id/minus_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="minusClick"
                android:text="-"
                android:textColor="@color/orange"
                android:textSize="@dimen/calcbuttonsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/AC_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/red"
                android:onClick="acClick"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

            <Button
                android:id="@+id/zero_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:onClick="zeroClick"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

            <Button
                android:id="@+id/equals_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/orange"
                android:onClick="equalsClick"
                android:text="="
                android:textColor="@color/white"
                android:textSize="@dimen/calcbuttonsize" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
